# [include]
#   path = ~/.gitconfig-public

[commit]
  verbose = true

[pull]
  rebase = true

[commit]
  gpgsign = true

[gpg]
  program = gpg

[core]
  ignorecase = false
  editor = nvim
  pager = delta

[delta]
  line-numbers = true
  hunk-header-style=omit
  syntax-theme = GitHub

[url "ssh://git@github.com/"]
  insteadOf = https://github.com/

[alias]
  a=add
  c=commit
  l=log --pretty="%h\\ %s" --graph
  s=status
